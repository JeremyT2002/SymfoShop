{% extends 'base.html.twig' %}

{% block title %}Register - SymfoShop{% endblock %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="card-title text-center mb-4">Create Account</h2>

                    {{ form_start(registrationForm, {'attr': {'novalidate': 'novalidate'}}) }}

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 mb-3">
                            {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control'}}) }}
                        </div>
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.first, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        {{ form_row(registrationForm.plainPassword.second, {'attr': {'class': 'form-control'}}) }}
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                            {{ form_label(registrationForm.agreeTerms, null, {'label_attr': {'class': 'form-check-label'}}) }}
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>

                    <div class="d-grid">
                        {{ form_widget(registrationForm.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                    </div>

                    {{ form_end(registrationForm) }}

                    <div class="text-center mt-3">
                        <p class="mb-0">
                            Already have an account? 
                            <a href="{{ path('login') }}">Sign in here</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

