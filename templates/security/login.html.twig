{% extends 'base.html.twig' %}

{% block title %}Login - SymfoShop{% endblock %}

{% block body %}
<div class="flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8 min-h-full">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="flex justify-center">
                <i class="fas fa-user-circle text-primary-600 text-6xl"></i>
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                Sign in to your account
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Or
                <a href="{{ path('register') }}" class="font-medium text-primary-600 hover:text-primary-500">
                    create a new account
                </a>
            </p>
        </div>

        {% if error %}
            <div class="bg-red-50 border border-red-200 text-red-700 px-4 py-3 rounded relative" role="alert">
                <span class="block sm:inline">
                    <i class="fas fa-exclamation-circle mr-2"></i>
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </span>
            </div>
        {% endif %}

        <form class="mt-8 space-y-6" method="post">
            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="rounded-md shadow-sm -space-y-px">
                <div>
                    <label for="inputEmail" class="sr-only">Email address</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-envelope text-gray-400"></i>
                        </div>
                        <input 
                            id="inputEmail" 
                            name="_username" 
                            type="email" 
                            autocomplete="email" 
                            required 
                            autofocus
                            value="{{ last_username }}"
                            class="appearance-none rounded-none relative block w-full px-10 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm" 
                            placeholder="Email address"
                        >
                    </div>
                </div>
                <div>
                    <label for="inputPassword" class="sr-only">Password</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-lock text-gray-400"></i>
                        </div>
                        <input 
                            id="inputPassword" 
                            name="_password" 
                            type="password" 
                            autocomplete="current-password" 
                            required
                            class="appearance-none rounded-none relative block w-full px-10 py-3 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-primary-500 focus:border-primary-500 focus:z-10 sm:text-sm" 
                            placeholder="Password"
                        >
                    </div>
                </div>
            </div>

            <div>
                <button 
                    type="submit" 
                    class="group relative w-full flex justify-center py-3 px-4 border border-transparent text-sm font-medium rounded-md text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500 transition-colors"
                >
                    <span class="absolute left-0 inset-y-0 flex items-center pl-3">
                        <i class="fas fa-sign-in-alt text-primary-500 group-hover:text-primary-400"></i>
                    </span>
                    Sign in
                </button>
            </div>

            <div class="text-center space-y-2">
                <p class="text-sm text-gray-600">
                    Don't have an account? 
                    <a href="{{ path('register') }}" class="font-medium text-primary-600 hover:text-primary-500">
                        Register here
                    </a>
                </p>
                <p class="text-sm">
                    <a href="{{ path('reset_password_request') }}" class="font-medium text-primary-600 hover:text-primary-500">
                        <i class="fas fa-question-circle mr-1"></i>Forgot your password?
                    </a>
                </p>
            </div>
        </form>
    </div>
</div>
{% endblock %}

