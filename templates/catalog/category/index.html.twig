{% extends 'catalog/base.html.twig' %}

{% block page_title %}Categories - SymfoShop{% endblock %}
{% block page_meta_description %}Browse our product categories{% endblock %}

{% block catalog_body %}
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="mb-10 text-center">
            <h1 class="text-5xl font-bold text-gray-900 mb-4">Shop by Category</h1>
            <p class="text-xl text-gray-600 max-w-2xl mx-auto">Browse our wide selection of products organized by category</p>
        </div>
        
        {% if categories|length > 0 %}
            <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
                {% for category in categories %}
                    <a href="{{ path('catalog_category', {slug: category.slug}) }}" class="bg-white rounded-2xl shadow-lg overflow-hidden hover:shadow-2xl transition-all duration-300 group transform hover:-translate-y-2 animate-slide-up" style="animation-delay: {{ loop.index0 * 0.1 }}s">
                        <div class="h-56 bg-gradient-to-br from-primary-500 via-primary-600 to-primary-700 flex items-center justify-center relative overflow-hidden">
                            <div class="absolute inset-0 bg-black opacity-0 group-hover:opacity-10 transition-opacity duration-300"></div>
                            <i class="fas fa-folder text-7xl text-white opacity-90 group-hover:scale-125 transition-transform duration-300 relative z-10"></i>
                            <div class="absolute bottom-0 left-0 right-0 h-1 bg-white transform scale-x-0 group-hover:scale-x-100 transition-transform duration-300"></div>
                        </div>
                        <div class="p-6">
                            <h2 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-primary-600 transition-colors">
                                {{ category.name|escape }}
                            </h2>
                            {% if category.children|length > 0 %}
                                <div class="flex items-center text-sm text-gray-500">
                                    <i class="fas fa-layer-group mr-2 text-primary-500"></i>
                                    <span>{{ category.children|length }} subcategor{{ category.children|length == 1 ? 'y' : 'ies' }}</span>
                                </div>
                            {% endif %}
                            <div class="mt-4 flex items-center text-primary-600 font-medium text-sm group-hover:translate-x-1 transition-transform">
                                <span>Explore</span>
                                <i class="fas fa-arrow-right ml-2"></i>
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        {% else %}
            <div class="bg-white rounded-2xl shadow-lg p-16 text-center animate-fade-in">
                <div class="max-w-md mx-auto">
                    <i class="fas fa-inbox text-8xl text-gray-300 mb-6"></i>
                    <h2 class="text-2xl font-bold text-gray-900 mb-3">No categories available</h2>
                    <p class="text-gray-600">Check back soon for new product categories.</p>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}

