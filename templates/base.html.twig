            <script src="https://cdnjs.cloudflare.com/ajax/libs/alpinejs/3.13.3/cdn.min.js" defer></script>
            <script>
                // Toast Notification System
                function toastNotifications() {
                    return {
                        toasts: [],
                        init() {
                            // Load flash messages from Symfony
                            {% for flash_message in app.flashes('success') %}
                                this.show('{{ flash_message|e('js') }}', 'success');
                            {% endfor %}
                            {% for flash_message in app.flashes('error') %}
                                this.show('{{ flash_message|e('js') }}', 'error');
                            {% endfor %}
                            {% for flash_message in app.flashes('info') %}
                                this.show('{{ flash_message|e('js') }}', 'info');
                            {% endfor %}
                            {% for flash_message in app.flashes('warning') %}
                                this.show('{{ flash_message|e('js') }}', 'warning');
                            {% endfor %}
                        },
                        show(message, type = 'info', duration = 5000) {
                            const id = Date.now() + Math.random();
                            const toast = {
                                id,
                                message,
                                type,
                                visible: true
                            };
                            this.toasts.push(toast);
                            
                            // Auto-remove after duration
                            if (duration > 0) {
                                setTimeout(() => {
                                    this.remove(id);
                                }, duration);
                            }
                            
                            return id;
                        },
                        remove(id) {
                            const index = this.toasts.findIndex(t => t.id === id);
                            if (index !== -1) {
                                this.toasts[index].visible = false;
                                setTimeout(() => {
                                    this.toasts = this.toasts.filter(t => t.id !== id);
                                }, 200); // Wait for transition
                            }
                        },
                        success(message, duration) {
                            return this.show(message, 'success', duration);
                        },
                        error(message, duration) {
                            return this.show(message, 'error', duration);
                        },
                        info(message, duration) {
                            return this.show(message, 'info', duration);
                        },
                        warning(message, duration) {
                            return this.show(message, 'warning', duration);
                        }
                    };
                }

                // Make toast functions globally available
                document.addEventListener('alpine:init', () => {
                    window.showToast = function(message, type = 'info', duration = 5000) {
                        const toastContainer = document.querySelector('[x-data="toastNotifications()"]');
                        if (toastContainer && toastContainer._x_dataStack) {
                            const toastData = toastContainer._x_dataStack[0];
                            return toastData.show(message, type, duration);
                        }
                    };
                    
                    window.showSuccessToast = function(message, duration) {
                        return window.showToast(message, 'success', duration);
                    };
                    
                    window.showErrorToast = function(message, duration) {
                        return window.showToast(message, 'error', duration);
                    };
                    
                    window.showInfoToast = function(message, duration) {
                        return window.showToast(message, 'info', duration);
                    };
                    
                    window.showWarningToast = function(message, duration) {
                        return window.showToast(message, 'warning', duration);
                    };
                });

                // Confirmation Modal System
                function confirmationModal() {
                    return {
                        isOpen: false,
                        title: '',
                        message: '',
                        onConfirm: null,
                        onCancel: null,
                        open(title, message, onConfirm, onCancel = null) {
                            this.title = title;
                            this.message = message;
                            this.onConfirm = onConfirm;
                            this.onCancel = onCancel;
                            this.isOpen = true;
                        },
                        confirm() {
                            if (this.onConfirm) {
                                this.onConfirm();
                            }
                            this.close();
                        },
                        cancel() {
                            if (this.onCancel) {
                                this.onCancel();
                            }
                            this.close();
                        },
                        close() {
                            this.isOpen = false;
                            this.title = '';
                            this.message = '';
                            this.onConfirm = null;
                            this.onCancel = null;
                        }
                    };
                }

                // Make confirmation modal globally available
                document.addEventListener('alpine:init', () => {
                    window.showConfirm = function(title, message, onConfirm, onCancel = null) {
                        const modalContainer = document.querySelector('[x-data="confirmationModal()"]');
                        if (modalContainer && modalContainer._x_dataStack) {
                            const modalData = modalContainer._x_dataStack[0];
                            modalData.open(title, message, onConfirm, onCancel);
                        }
                    };
                });
            </script>
        {% endblock %}
