{% extends 'admin/base.html.twig' %}

{% block page_title %}New User{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('admin_users_index') }}" class="text-gray-600 hover:text-gray-900 mb-2 inline-block">
            <i class="fas fa-arrow-left"></i> Back to Users
        </a>
        <h2 class="text-2xl font-bold text-gray-900">Create New User</h2>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
        <form method="post">
            <div class="space-y-6">
                <div>
                    <label for="email" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-envelope mr-2 text-gray-500"></i>
                        Email Address <span class="text-red-500 ml-1">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-at text-gray-400"></i>
                        </div>
                        <input type="email" id="email" name="email" required
                               autocomplete="email"
                               placeholder="user@example.com"
                               class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               value="{{ user.email|default('') }}">
                    </div>
                    <p class="mt-1 text-xs text-gray-500">This will be used for login and account communication</p>
                </div>
                
                <div>
                    <label for="password" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-lock mr-2 text-gray-500"></i>
                        Password <span class="text-red-500 ml-1">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-key text-gray-400"></i>
                        </div>
                        <input type="password" id="password" name="password" required minlength="6"
                               autocomplete="new-password"
                               placeholder="Enter a secure password"
                               class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors">
                        <button type="button" onclick="togglePassword('password')" class="absolute inset-y-0 right-0 pr-3 flex items-center">
                            <i class="fas fa-eye text-gray-400 hover:text-gray-600" id="password-toggle-icon"></i>
                        </button>
                    </div>
                    <div class="mt-2">
                        <div class="flex items-center text-xs text-gray-500 mb-1">
                            <i class="fas fa-info-circle mr-1"></i>
                            <span>Password requirements:</span>
                        </div>
                        <ul class="text-xs text-gray-500 ml-5 list-disc">
                            <li>Minimum 6 characters</li>
                            <li>Use a mix of letters and numbers for better security</li>
                        </ul>
                    </div>
                </div>
                
                <div>
                    <label class="flex items-center text-sm font-medium text-gray-700 mb-3">
                        <i class="fas fa-user-shield mr-2 text-gray-500"></i>
                        User Roles
                    </label>
                    <div class="space-y-3 bg-gray-50 p-4 rounded-lg border border-gray-200">
                        <label class="flex items-start cursor-pointer group">
                            <input type="checkbox" name="roles[]" value="ROLE_USER" checked
                                   class="mt-1 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <div class="ml-3 flex-1">
                                <span class="text-sm font-medium text-gray-900">ROLE_USER</span>
                                <p class="text-xs text-gray-500 mt-0.5">Standard user access - can browse and purchase products</p>
                            </div>
                        </label>
                        <label class="flex items-start cursor-pointer group">
                            <input type="checkbox" name="roles[]" value="ROLE_ADMIN"
                                   class="mt-1 rounded border-gray-300 text-blue-600 focus:ring-blue-500">
                            <div class="ml-3 flex-1">
                                <span class="text-sm font-medium text-gray-900">ROLE_ADMIN</span>
                                <p class="text-xs text-gray-500 mt-0.5">Administrator access - full access to admin panel and system management</p>
                            </div>
                        </label>
                    </div>
                </div>
                
                <div>
                    <label class="flex items-center cursor-pointer group">
                        <input type="checkbox" name="isActive" value="1" checked
                               class="rounded border-gray-300 text-blue-600 focus:ring-blue-500 w-5 h-5">
                        <div class="ml-3 flex-1">
                            <span class="text-sm font-medium text-gray-900">Account Status: Active</span>
                            <p class="text-xs text-gray-500 mt-0.5">Uncheck to disable this user account</p>
                        </div>
                    </label>
                </div>
                
                <script>
                    function togglePassword(fieldId) {
                        const field = document.getElementById(fieldId);
                        const icon = document.getElementById(fieldId + '-toggle-icon');
                        if (field.type === 'password') {
                            field.type = 'text';
                            icon.classList.remove('fa-eye');
                            icon.classList.add('fa-eye-slash');
                        } else {
                            field.type = 'password';
                            icon.classList.remove('fa-eye-slash');
                            icon.classList.add('fa-eye');
                        }
                    }
                </script>
                
                <div class="flex items-center justify-end space-x-4 pt-4 border-t">
                    <a href="{{ path('admin_users_index') }}" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Create User
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

