{% extends 'admin/base.html.twig' %}

{% block page_title %}New API Key{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('admin_api_keys_index') }}" class="text-gray-600 hover:text-gray-900 mb-2 inline-block">
            <i class="fas fa-arrow-left"></i> Back to API Keys
        </a>
        <h2 class="text-2xl font-bold text-gray-900">Create New API Key</h2>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
        <form method="post">
            <div class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                        API Key Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="name" name="name" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           placeholder="e.g., Production API Key">
                </div>
                
                <div>
                    <label for="user" class="block text-sm font-medium text-gray-700 mb-2">
                        User <span class="text-red-500">*</span>
                    </label>
                    <select id="user" name="user" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">Select a user...</option>
                        {% for user in users %}
                            <option value="{{ user.id }}">{{ user.email }}</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div>
                    <label for="expiresAt" class="block text-sm font-medium text-gray-700 mb-2">
                        Expires At (Optional)
                    </label>
                    <input type="datetime-local" id="expiresAt" name="expiresAt"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <p class="mt-1 text-sm text-gray-500">Leave empty for no expiration</p>
                </div>
                
                <div>
                    <label for="scopes" class="block text-sm font-medium text-gray-700 mb-2">
                        Scopes (Optional)
                    </label>
                    <input type="text" id="scopes" name="scopes"
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           placeholder="e.g., read, write (comma-separated)">
                    <p class="mt-1 text-sm text-gray-500">Comma-separated list of scopes</p>
                </div>
                
                <div class="flex items-center justify-end space-x-4 pt-4 border-t">
                    <a href="{{ path('admin_api_keys_index') }}" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Create API Key
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

