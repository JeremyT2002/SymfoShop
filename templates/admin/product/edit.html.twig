{% extends 'admin/base.html.twig' %}

{% block page_title %}Edit Product: {{ product.name }}{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('admin_products_index') }}" class="text-gray-600 hover:text-gray-900 mb-2 inline-block">
            <i class="fas fa-arrow-left"></i> Back to Products
        </a>
        <h2 class="text-2xl font-bold text-gray-900">Edit Product</h2>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
        <form method="post">
            <div class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                        Product Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="name" name="name" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           value="{{ product.name }}">
                </div>
                
                <div>
                    <label for="description" class="block text-sm font-medium text-gray-700 mb-2">
                        Description
                    </label>
                    <textarea id="description" name="description" rows="4"
                              class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">{{ product.description }}</textarea>
                </div>
                
                <div>
                    <label for="status" class="block text-sm font-medium text-gray-700 mb-2">
                        Status <span class="text-red-500">*</span>
                    </label>
                    <select id="status" name="status" required
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        {% for status in statuses %}
                            <option value="{{ status.value }}" {% if product.status == status %}selected{% endif %}>
                                {{ status.value|title }}
                            </option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="flex items-center justify-end space-x-4 pt-4 border-t">
                    <a href="{{ path('admin_products_show', {id: product.id}) }}" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Update Product
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

