{% extends 'admin/base.html.twig' %}

{% block page_title %}New Product{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('admin_products_index') }}" class="text-gray-600 hover:text-gray-900 mb-2 inline-block">
            <i class="fas fa-arrow-left"></i> Back to Products
        </a>
        <h2 class="text-2xl font-bold text-gray-900">Create New Product</h2>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
        <form method="post">
            <div class="space-y-6">
                <div>
                    <label for="name" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-tag mr-2 text-gray-500"></i>
                        Product Name <span class="text-red-500 ml-1">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-box text-gray-400"></i>
                        </div>
                        <input type="text" id="name" name="name" required
                               placeholder="e.g., Wireless Headphones"
                               class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               value="{{ product.name|default('') }}">
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Enter a descriptive name for your product</p>
                </div>
                
                <div>
                    <label for="description" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-align-left mr-2 text-gray-500"></i>
                        Description
                    </label>
                    <textarea id="description" name="description" rows="5"
                              placeholder="Describe your product in detail. Include key features, benefits, and any important information customers should know..."
                              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors resize-y">{{ product.description|default('') }}</textarea>
                    <p class="mt-1 text-xs text-gray-500">Optional: Add a detailed description to help customers understand your product</p>
                </div>
                
                <div>
                    <label for="status" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-toggle-on mr-2 text-gray-500"></i>
                        Status <span class="text-red-500 ml-1">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-info-circle text-gray-400"></i>
                        </div>
                        <select id="status" name="status" required
                                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors appearance-none bg-white">
                            {% for status in statuses %}
                                <option value="{{ status.value }}" {% if product.status is defined and product.status == status %}selected{% endif %}>
                                    {{ status.value|title }}
                                </option>
                            {% endfor %}
                        </select>
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <i class="fas fa-chevron-down text-gray-400"></i>
                        </div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500">
                        <span class="font-medium">Active:</span> Visible to customers | 
                        <span class="font-medium">Draft:</span> Hidden from customers | 
                        <span class="font-medium">Archived:</span> Discontinued
                    </p>
                </div>
                
                <div class="flex items-center justify-end space-x-4 pt-4 border-t">
                    <a href="{{ path('admin_products_index') }}" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Create Product
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

