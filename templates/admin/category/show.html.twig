{% extends 'admin/base.html.twig' %}

{% block page_title %}Category: {{ category.name }}{% endblock %}

{% block body %}
    <div class="mb-6 flex items-center justify-between">
        <div>
            <a href="{{ path('admin_categories_index') }}" class="text-gray-600 hover:text-gray-900 mb-2 inline-block">
                <i class="fas fa-arrow-left"></i> Back to Categories
            </a>
            <h2 class="text-2xl font-bold text-gray-900">{{ category.name }}</h2>
        </div>
        <div class="flex space-x-2">
            <a href="{{ path('admin_categories_edit', {id: category.id}) }}" class="bg-yellow-600 text-white px-4 py-2 rounded-lg hover:bg-yellow-700 transition-colors">
                <i class="fas fa-edit"></i> Edit
            </a>
            <form method="post" action="{{ path('admin_categories_delete', {id: category.id}) }}" class="inline" onsubmit="return confirm('Are you sure you want to delete this category?');">
                <input type="hidden" name="_token" value="{{ csrf_token('delete_category_' ~ category.id) }}">
                <button type="submit" class="bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition-colors">
                    <i class="fas fa-trash"></i> Delete
                </button>
            </form>
        </div>
    </div>
    
    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <!-- Main Info -->
        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Category Information</h3>
                <dl class="grid grid-cols-1 gap-4">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Name</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ category.name }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Slug</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ category.slug }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Parent Category</dt>
                        <dd class="mt-1 text-sm text-gray-900">
                            {% if category.parent %}
                                <a href="{{ path('admin_categories_show', {id: category.parent.id}) }}" class="text-blue-600 hover:text-blue-900">
                                    {{ category.parent.name }}
                                </a>
                            {% else %}
                                <span class="text-gray-400">Root category</span>
                            {% endif %}
                        </dd>
                    </div>
                </dl>
            </div>
            
            <!-- Subcategories -->
            {% if category.children|length > 0 %}
                <div class="bg-white rounded-lg shadow p-6">
                    <h3 class="text-lg font-semibold text-gray-900 mb-4">Subcategories ({{ category.children|length }})</h3>
                    <div class="space-y-2">
                        {% for child in category.children %}
                            <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                                <a href="{{ path('admin_categories_show', {id: child.id}) }}" class="text-blue-600 hover:text-blue-900 font-medium">
                                    {{ child.name }}
                                </a>
                                <span class="text-sm text-gray-500">{{ child.slug }}</span>
                            </div>
                        {% endfor %}
                    </div>
                </div>
            {% endif %}
        </div>
        
        <!-- Sidebar -->
        <div class="space-y-6">
            <div class="bg-white rounded-lg shadow p-6">
                <h3 class="text-lg font-semibold text-gray-900 mb-4">Metadata</h3>
                <dl class="space-y-3">
                    <div>
                        <dt class="text-sm font-medium text-gray-500">ID</dt>
                        <dd class="mt-1 text-sm text-gray-900">#{{ category.id }}</dd>
                    </div>
                    <div>
                        <dt class="text-sm font-medium text-gray-500">Subcategories</dt>
                        <dd class="mt-1 text-sm text-gray-900">{{ category.children|length }}</dd>
                    </div>
                </dl>
            </div>
        </div>
    </div>
{% endblock %}

