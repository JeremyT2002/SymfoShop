{% extends 'admin/base.html.twig' %}

{% block page_title %}Edit Category: {{ category.name }}{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('admin_categories_index') }}" class="text-gray-600 hover:text-gray-900 mb-2 inline-block">
            <i class="fas fa-arrow-left"></i> Back to Categories
        </a>
        <h2 class="text-2xl font-bold text-gray-900">Edit Category</h2>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
        <form method="post">
            <div class="space-y-6">
                <div>
                    <label for="name" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-tag mr-2 text-gray-500"></i>
                        Category Name <span class="text-red-500 ml-1">*</span>
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-folder text-gray-400"></i>
                        </div>
                        <input type="text" id="name" name="name" required
                               placeholder="e.g., Electronics, Clothing, Books"
                               class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors"
                               value="{{ category.name }}">
                    </div>
                    <p class="mt-1 text-xs text-gray-500">Enter a clear, descriptive name for this category</p>
                </div>
                
                <div>
                    <label for="parent" class="flex items-center text-sm font-medium text-gray-700 mb-2">
                        <i class="fas fa-sitemap mr-2 text-gray-500"></i>
                        Parent Category
                    </label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <i class="fas fa-layer-group text-gray-400"></i>
                        </div>
                        <select id="parent" name="parent"
                                class="w-full pl-10 pr-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500 transition-colors appearance-none bg-white">
                            <option value="">None (Root Category)</option>
                            {% for cat in allCategories %}
                                {% if cat.id != category.id %}
                                    <option value="{{ cat.id }}" {% if category.parent and category.parent.id == cat.id %}selected{% endif %}>
                                        {{ cat.name }}
                                    </option>
                                {% endif %}
                            {% endfor %}
                        </select>
                        <div class="absolute inset-y-0 right-0 pr-3 flex items-center pointer-events-none">
                            <i class="fas fa-chevron-down text-gray-400"></i>
                        </div>
                    </div>
                    <p class="mt-1 text-xs text-gray-500">
                        <i class="fas fa-info-circle mr-1"></i>
                        Select a parent category to make this a subcategory, or leave empty for a root category
                    </p>
                </div>
                
                <div class="flex items-center justify-end space-x-4 pt-4 border-t">
                    <a href="{{ path('admin_categories_show', {id: category.id}) }}" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Update Category
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

