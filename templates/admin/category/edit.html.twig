{% extends 'admin/base.html.twig' %}

{% block page_title %}Edit Category: {{ category.name }}{% endblock %}

{% block body %}
    <div class="mb-6">
        <a href="{{ path('admin_categories_index') }}" class="text-gray-600 hover:text-gray-900 mb-2 inline-block">
            <i class="fas fa-arrow-left"></i> Back to Categories
        </a>
        <h2 class="text-2xl font-bold text-gray-900">Edit Category</h2>
    </div>
    
    <div class="bg-white rounded-lg shadow p-6 max-w-2xl">
        <form method="post">
            <div class="space-y-6">
                <div>
                    <label for="name" class="block text-sm font-medium text-gray-700 mb-2">
                        Category Name <span class="text-red-500">*</span>
                    </label>
                    <input type="text" id="name" name="name" required
                           class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
                           value="{{ category.name }}">
                </div>
                
                <div>
                    <label for="parent" class="block text-sm font-medium text-gray-700 mb-2">
                        Parent Category
                    </label>
                    <select id="parent" name="parent"
                            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                        <option value="">None (Root Category)</option>
                        {% for cat in allCategories %}
                            {% if cat.id != category.id %}
                                <option value="{{ cat.id }}" {% if category.parent and category.parent.id == cat.id %}selected{% endif %}>
                                    {{ cat.name }}
                                </option>
                            {% endif %}
                        {% endfor %}
                    </select>
                    <p class="mt-1 text-sm text-gray-500">Leave empty to make this a root category</p>
                </div>
                
                <div class="flex items-center justify-end space-x-4 pt-4 border-t">
                    <a href="{{ path('admin_categories_show', {id: category.id}) }}" class="px-4 py-2 text-gray-700 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Cancel
                    </a>
                    <button type="submit" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
                        Update Category
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

