{% extends 'admin/base.html.twig' %}

{% block page_title %}Orders{% endblock %}

{% block body %}
    <div class="mb-6">
        <h2 class="text-2xl font-bold text-gray-900">Orders</h2>
        <p class="text-gray-600 mt-1">Manage customer orders</p>
    </div>
    
    <!-- Filters -->
    <div class="bg-white rounded-lg shadow p-4 mb-6">
        <form method="get" class="flex items-center space-x-4">
            <div class="flex-1">
                <input type="text" name="search" value="{{ search }}" placeholder="Search by order number or email..." 
                       class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
            </div>
            <div>
                <select name="status" class="px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    <option value="">All Statuses</option>
                    <option value="new" {% if status == 'new' %}selected{% endif %}>New</option>
                    <option value="payment_pending" {% if status == 'payment_pending' %}selected{% endif %}>Payment Pending</option>
                    <option value="payment_confirmed" {% if status == 'payment_confirmed' %}selected{% endif %}>Payment Confirmed</option>
                    <option value="processing" {% if status == 'processing' %}selected{% endif %}>Processing</option>
                    <option value="shipped" {% if status == 'shipped' %}selected{% endif %}>Shipped</option>
                    <option value="completed" {% if status == 'completed' %}selected{% endif %}>Completed</option>
                    <option value="cancelled" {% if status == 'cancelled' %}selected{% endif %}>Cancelled</option>
                </select>
            </div>
            <button type="submit" class="bg-gray-600 text-white px-4 py-2 rounded-lg hover:bg-gray-700 transition-colors">
                <i class="fas fa-filter"></i> Filter
            </button>
            {% if search or status %}
                <a href="{{ path('admin_orders_index') }}" class="text-gray-600 hover:text-gray-900 px-4 py-2">
                    Clear
                </a>
            {% endif %}
        </form>
    </div>
    
    <!-- Orders Table -->
    <div class="bg-white rounded-lg shadow overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Order #</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Customer</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Total</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Status</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">Date</th>
                    <th class="px-6 py-3 text-right text-xs font-medium text-gray-500 uppercase tracking-wider">Actions</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                {% if orders|length > 0 %}
                    {% for order in orders %}
                        <tr class="hover:bg-gray-50">
                            <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900">
                                {{ order.orderNumber }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ order.email }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">
                                {{ (order.grandTotal / 100)|number_format(2, '.', ',') }} {{ order.currency }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="px-2 inline-flex text-xs leading-5 font-semibold rounded-full 
                                    {% if order.status == 'completed' %}bg-green-100 text-green-800
                                    {% elseif order.status == 'shipped' %}bg-blue-100 text-blue-800
                                    {% elseif order.status == 'processing' %}bg-yellow-100 text-yellow-800
                                    {% elseif order.status == 'cancelled' %}bg-red-100 text-red-800
                                    {% else %}bg-gray-100 text-gray-800{% endif %}">
                                    {{ order.status|replace({'_': ' '})|title }}
                                </span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-500">
                                {{ order.createdAt|date('Y-m-d H:i') }}
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium">
                                <a href="{{ path('admin_orders_show', {id: order.id}) }}" class="text-blue-600 hover:text-blue-900">
                                    <i class="fas fa-eye"></i> View
                                </a>
                            </td>
                        </tr>
                    {% endfor %}
                {% else %}
                    <tr>
                        <td colspan="6" class="px-6 py-8 text-center text-gray-500">
                            <i class="fas fa-shopping-cart text-4xl mb-4 text-gray-300"></i>
                            <p class="text-lg font-medium">No orders found</p>
                        </td>
                    </tr>
                {% endif %}
            </tbody>
        </table>
    </div>
    
    <!-- Pagination -->
    {% if totalPages > 1 %}
        <div class="mt-6 flex items-center justify-between">
            <div class="text-sm text-gray-700">
                Showing page {{ currentPage }} of {{ totalPages }}
            </div>
            <div class="flex space-x-2">
                {% if currentPage > 1 %}
                    <a href="{{ path('admin_orders_index', {page: currentPage - 1, status: status, search: search}) }}" 
                       class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Previous
                    </a>
                {% endif %}
                {% if currentPage < totalPages %}
                    <a href="{{ path('admin_orders_index', {page: currentPage + 1, status: status, search: search}) }}" 
                       class="px-4 py-2 border border-gray-300 rounded-lg hover:bg-gray-50">
                        Next
                    </a>
                {% endif %}
            </div>
        </div>
    {% endif %}
{% endblock %}

